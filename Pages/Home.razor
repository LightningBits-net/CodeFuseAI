@page "/Home"
@page "/"
@inject NavigationManager _navigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize(Roles = SD.Role_Admin + "," + SD.Role_Client + "," + SD.Role_LightningChats + "," + SD.Role_CodeTranslator)]


<PageTitle>CodeFuse AI</PageTitle>

<div class="px-8 py-2 bg-black text-gray-200">
    <div class="flex items-center mx-auto container justify-center md:justify-between py-2">
        <div class="text-2xl font-bold">
            <span>CodeFuse AI&nbsp;</span>
        </div>
    </div>
</div>


<section class="dark:bg-gray-800 dark:text-gray-100">
    <div class="container flex flex-col-reverse mx-auto lg:flex-row">
        <div class="flex flex-col px-6 py-8 space-y-6 rounded-sm sm:p-8 lg:p-12 lg:w-1/2 xl:w-2/5 dark:bg-green-400 dark:text-gray-900">
            <AuthorizeView Roles="@SD.Role_Admin">
                <MudCard Elevation="25">
                    <MudCardContent>
                        <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                            <div>
                                <MudText Typo="Typo.h5">Lightningchats</MudText>
                                <MudText Typo="Typo.caption">Alpha v.1</MudText>
                            </div>
                            <div>
                                <MudText Typo="Typo.caption">Powered by ChatGPT turbo 16k</MudText>
                            </div>
                        </div>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Href="/my-chat" FullWidth="true" Variant="Variant.Outlined" Color="Color.Success">Chat now</MudButton>
                    </MudCardActions>
                </MudCard>
                <MudCard Elevation="25">
                    <MudCardContent>
                        <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                            <div>
                                <MudText Typo="Typo.h5">C#/VB.Net code translator</MudText>
                                <MudText Typo="Typo.caption">Develpoment</MudText>
                            </div>
                            <div>
                                <MudText Typo="Typo.caption">Powered by ChatGPT turbo 16k</MudText>
                            </div>
                        </div>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Href="/visualbasic-translator" FullWidth="true" Variant="Variant.Outlined" Color="Color.Success">Translate now</MudButton>
                    </MudCardActions>
                </MudCard>
            </AuthorizeView>
            <AuthorizeView Roles="@SD.Role_LightningChats">
                <MudCard Elevation="25">
                    <MudCardContent>
                        <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                            <div>
                                <MudText Typo="Typo.h5">Lightningchats</MudText>
                                <MudText Typo="Typo.caption">Alpha v.1</MudText>
                            </div>
                            <div>
                                <MudText Typo="Typo.caption">Powered by ChatGPT turbo 16k</MudText>
                            </div>
                        </div>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Href="/my-chat" FullWidth="true" Variant="Variant.Outlined" Color="Color.Success">Chat now</MudButton>
                    </MudCardActions>
                </MudCard>
                <MudCard Elevation="25">
                    <MudCardContent>
                        <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                            <div>
                                <MudText Typo="Typo.h5">C#/VB.Net code translator</MudText>
                                <MudText Typo="Typo.caption">Develpoment</MudText>
                            </div>
                            <div>
                                <MudText Typo="Typo.caption">Powered by ChatGPT turbo 16k</MudText>
                            </div>
                        </div>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Href="/visualbasic-translator" FullWidth="true" Variant="Variant.Outlined" Color="Color.Success">Translate now</MudButton>
                    </MudCardActions>
                </MudCard>
            </AuthorizeView>
            <AuthorizeView Roles="@SD.Role_CodeTranslator">
                <MudCard Elevation="25">
                    <MudCardContent>
                        <div style="display: flex; justify-content: space-between; align-items: flex-start; opacity: 0.5;">
                            <div>
                                <MudText Typo="Typo.h5">Lightningchats</MudText>
                                <MudText Typo="Typo.caption">Alpha v.1</MudText>
                            </div>
                            <div>
                                <MudText Typo="Typo.caption">Powered by ChatGPT turbo 16k</MudText>
                            </div>
                        </div>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Href="/my-chat" FullWidth="true" Variant="Variant.Outlined" Color="Color.Success" Disabled="true">Chat now</MudButton> <!-- Added Disabled attribute -->
                    </MudCardActions>
                </MudCard>

                <MudCard Elevation="25">
                    <MudCardContent>
                        <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                            <div>
                                <MudText Typo="Typo.h5">C#/VB.Net code translator</MudText>
                                <MudText Typo="Typo.caption">Develpoment</MudText>
                            </div>
                            <div>
                                <MudText Typo="Typo.caption">Powered by ChatGPT turbo 16k</MudText>
                            </div>
                        </div>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Href="/visualbasic-translator" FullWidth="true" Variant="Variant.Outlined" Color="Color.Success">Translate now</MudButton>
                    </MudCardActions>
                </MudCard>
            </AuthorizeView>

