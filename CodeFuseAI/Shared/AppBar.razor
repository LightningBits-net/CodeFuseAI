<AuthorizeView Roles="@($"{roleAdmin},{roleClient},{roleLightningChats},{roleCodeTranslator}")">
    <Authorized>
        <MudAppBar Elevation="21" Dense="true">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" Edge="Edge.Start"
                           OnClick="async () => await OnSidebarToggled.InvokeAsync()" />
            <MudButton Href="/" StartIcon="@Icons.Material.Filled.Home" Variant="Variant.Filled" Size="Size.Small" Color="Color.Inherit"></MudButton>
            <MudSpacer />
            <MudButton Href="Identity/Account/Logout" StartIcon="@Icons.Filled.Logout" Variant="Variant.Filled" Size="Size.Small" Color="Color.Inherit">Log-out</MudButton>
        </MudAppBar>
    </Authorized>
    <NotAuthorized>
        <MudAppBar Elevation="21" Dense="true">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" Edge="Edge.Start"
                           OnClick="async () => await OnSidebarToggled.InvokeAsync()" />
            <MudButton Href="/" StartIcon="@Icons.Material.Filled.Home" Variant="Variant.Filled" Size="Size.Small" Color="Color.Inherit"></MudButton>
            <MudSpacer />
            <MudButton Href="Identity/Account/Login" StartIcon="@Icons.Filled.Login" Variant="Variant.Filled" Size="Size.Small" Color="Color.Inherit">Log-in</MudButton>
        </MudAppBar>
    </NotAuthorized>
</AuthorizeView>


@code {
    [Parameter]
    public EventCallback OnSidebarToggled { get; set; }
    private string roleAdmin = CodeFuseAI_Shared.Commons.SD.Role_Admin;
    private string roleClient = CodeFuseAI_Shared.Commons.SD.Role_Client;
    private string roleLightningChats = CodeFuseAI_Shared.Commons.SD.Role_LightningChats;
    private string roleCodeTranslator = CodeFuseAI_Shared.Commons.SD.Role_CodeTranslator;

}